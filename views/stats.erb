<% content_for :title do %>Notes | Statistics<% end %>
<% content_for :body do %>
  <div class="row">
    <div class="col-5 mx-auto">
      <div class="card bg-warning" style="min-height: 28rem;">
        <div class="container card-header">
          <div class="row">
            <div class="col-11 h3">Statistics</div>
            <div class="col-1 px-1">
              <a class="text-secondary" href="/notes">
                <i class="material-icons">cancel</i>
              </a>
            </div>
          </div>
        </div>
        <div class="card-body">
          <div class="card-text pb-2">Notes number: <%= @stats.notes_number %></div>
          <div class="card-text">Tags number: <%= @stats.tags_number %></div>
        </div>
      </div>
    </div>
  </div>
<% end %>
