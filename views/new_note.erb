<div class="modal-header d-flex flex-column border-0">
  <div class="d-flex w-100">
    <div class="flex-fill">
      <textarea class="form-control bg-dark text-light border-0" rows="1" name="title" placeholder="title"></textarea>
    </div>
    <div class="pl-2 pt-1">
      <i type="button" class="material-icons-round" id="new-note">check_circle</i>
    </div>
    <div class="pl-1 pt-1">
      <i type="button" class="material-icons-round" data-dismiss="modal">cancel</i>
    </div>
  </div>
  <small class="text-muted"><%= Time.new.strftime('%B %-d, %Y') %></small>
</div>
<div class="modal-body">
  <div>
    <textarea class="form-control form-control-sm bg-dark text-light border-0" rows="2" name="tags" placeholder="tags"></textarea>
  </div>
  <div class="py-3">
    <textarea class="form-control form-control-sm bg-dark text-light border-0" rows="5" name="content" placeholder="content"></textarea>
  </div>
  <div>
    <textarea class="form-control form-control-sm bg-dark text-light border-0" rows="2" name="references" placeholder="references"></textarea>
  </div>
</div>
