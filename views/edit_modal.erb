<div class="modal-header d-flex flex-column border-0" data-note-id="<%= @note.id %>">
  <div class="d-flex w-100">
    <div class="flex-fill mb-1">
      <%# <input class="form-control form-control-sm bg-dark text-light border-0" type="text" name="title" placeholder="title" value=""> %>
      <textarea class="form-control form-control-sm bg-dark text-light border-0" rows="1" name="title" placeholder="title"><%= @note.title %></textarea>
    </div>
    <div class="pl-2 pt-1">
      <i type="button" class="material-icons-round" id="confirm-editing">check_circle</i>
    </div>
    <div class="pl-1 pt-1">
      <i type="button" class="material-icons-round" data-dismiss="modal">cancel</i>
    </div>
  </div>
  <small class="text-muted"><%= Time.parse(@note.id.to_s).strftime('%B %-d, %Y') %></small>
</div>
<div class="modal-body">
  <div>
    <%# textarea with 2 rows for tags and references %>
    <%# <input class="form-control form-control-sm bg-dark text-light border-0" type="text" name="tags" placeholder="tags" value=""> %>
    <textarea class="form-control form-control-sm bg-dark text-light border-0" rows="2" name="tags" placeholder="tags"><%= @note.tags * ' ' %></textarea>
  </div>
  <div class="py-3">
    <textarea class="form-control form-control-sm bg-dark text-light border-0" rows="5" name="content" placeholder="content"><%= @note.content %></textarea>
  </div>
  <div>
    <%# <input class="form-control form-control-sm bg-dark text-light border-0" type="text" name="references" placeholder="references" value=""> %>
    <textarea class="form-control form-control-sm bg-dark text-light border-0" rows="2" name="references" placeholder="references"><%= @note.references * ' ' %></textarea>
  </div>
</div>
